@model Todo
@using TodoApplication.Models

<h1>Edit Task</h1>

<form action="/Todo?id=@Model.TodoId" method="post">
    <div class="form-group">
        <label for="name">Task</label>
        <input type="text" name="name" value="@Model.Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="urgent">Urgent</label>
        <input type="checkbox" name="urgent" value="@Model.Done" />
    </div>

    <div class="form-group">
        <label for="done">Done</label>
        <input type="checkbox" name="done" value="@Model.Urgent" />
    </div>

    <button type="submit">Update</button>
</form>
